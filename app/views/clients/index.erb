<% #  This file is app/views/clients/index.html.erb %>
<h1 style="text-align:center;">All Clients</h1>
<table class = "table table-hover" id="clients">
  <thead>
    <tr>
      <th>Name</th>
      <th>Counselor</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Intake Information</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td>
          <%= link_to "#{client.name}", client_path(client) %>
        </td>
        <td>
          <%= client.counselor %>
        </td>
        <td>
          <%= client.email %>
        </td>
        <td>
          <%= client.phone_number %>
        </td>
        <td>
          <%= link_to "More about #{client.name}", client_path(client) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>