<h1>Rooms</h1>

<table id='room_table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <%= render partial: "room", locals: {room: room} %>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Room', new_room_path, method: :get, :remote => true %>
